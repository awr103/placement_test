<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conduct Test - Placement Test System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Conduct Placement Test</h2>
        
        <div class="card mb-4">
            <div class="card-header">
                <h4>Student Information</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Name:</strong> <%= test.student_name %></p>
                        <p><strong>Age:</strong> <%= test.student_age %></p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Program:</strong> <%= test.program %></p>
                        <p><strong>Sales Contact:</strong> <%= test.sales_username %></p>
                    </div>
                </div>
                <% if (test.sales_notes) { %>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h6 class="mb-2">Notes from Sales:</h6>
                            <p class="mb-0"><%= test.sales_notes %></p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4>Test Evaluation</h4>
            </div>
            <div class="card-body">
                <form action="/teacher/submit-test/<%= test._id %>" method="POST">
                    <div class="mb-3">
                        <label for="grammar_notes" class="form-label">Grammar Notes</label>
                        <textarea class="form-control" id="grammar_notes" name="grammar_notes" rows="3" required><%= test.grammar_notes || '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="vocabulary_notes" class="form-label">Vocabulary Notes</label>
                        <textarea class="form-control" id="vocabulary_notes" name="vocabulary_notes" rows="3" required><%= test.vocabulary_notes || '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="fluency_notes" class="form-label">Fluency Notes</label>
                        <textarea class="form-control" id="fluency_notes" name="fluency_notes" rows="3" required><%= test.fluency_notes || '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="pronunciation_notes" class="form-label">Pronunciation Notes</label>
                        <textarea class="form-control" id="pronunciation_notes" name="pronunciation_notes" rows="3" required><%= test.pronunciation_notes || '' %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="recommended_program" class="form-label">Recommended Program & Level</label>
                        <select class="form-select" id="recommended_program" name="recommended_program" required>
                            <option value="">Select Program & Level</option>
                            <optgroup label="Kids ESL (Power Up)">
                                <% for(let i = 0; i <= 7; i++) { %>
                                    <option value="Power Up <%= i %>A" <%= (test.recommended_program === `Power Up ${i}A`) ? 'selected' : '' %>>Power Up <%= i %>A</option>
                                    <option value="Power Up <%= i %>B" <%= (test.recommended_program === `Power Up ${i}B`) ? 'selected' : '' %>>Power Up <%= i %>B</option>
                                <% } %>
                            </optgroup>
                            <optgroup label="IELTS">
                                <% for(let i = 1; i <= 3; i++) { %>
                                    <option value="IELTS <%= i %>A" <%= (test.recommended_program === `IELTS ${i}A`) ? 'selected' : '' %>>IELTS <%= i %>A</option>
                                    <option value="IELTS <%= i %>B" <%= (test.recommended_program === `IELTS ${i}B`) ? 'selected' : '' %>>IELTS <%= i %>B</option>
                                <% } %>
                            </optgroup>
                            <optgroup label="Adult Communication">
                                <% for(let i = 1; i <= 7; i++) { %>
                                    <option value="Adult Communication <%= i %>A" <%= (test.recommended_program === `Adult Communication ${i}A`) ? 'selected' : '' %>>Adult Communication <%= i %>A</option>
                                    <option value="Adult Communication <%= i %>B" <%= (test.recommended_program === `Adult Communication ${i}B`) ? 'selected' : '' %>>Adult Communication <%= i %>B</option>
                                <% } %>
                            </optgroup>
                            <optgroup label="Adult ESL">
                                <% for(let i = 1; i <= 7; i++) { %>
                                    <option value="Adult ESL <%= i %>A" <%= (test.recommended_program === `Adult ESL ${i}A`) ? 'selected' : '' %>>Adult ESL <%= i %>A</option>
                                    <option value="Adult ESL <%= i %>B" <%= (test.recommended_program === `Adult ESL ${i}B`) ? 'selected' : '' %>>Adult ESL <%= i %>B</option>
                                <% } %>
                            </optgroup>
                            <optgroup label="Teens Class">
                                <% for(let i = 1; i <= 7; i++) { %>
                                    <option value="Teens <%= i %>A" <%= (test.recommended_program === `Teens ${i}A`) ? 'selected' : '' %>>Teens <%= i %>A</option>
                                    <option value="Teens <%= i %>B" <%= (test.recommended_program === `Teens ${i}B`) ? 'selected' : '' %>>Teens <%= i %>B</option>
                                <% } %>
                            </optgroup>
                            <option value="Business English" <%= (test.recommended_program === 'Business English') ? 'selected' : '' %>>Business English</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="teacher_comments" class="form-label">Additional Comments</label>
                        <textarea class="form-control" id="teacher_comments" name="teacher_comments" rows="3"><%= test.teacher_comments || '' %></textarea>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/teacher/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                        <button type="submit" class="btn btn-primary">Complete Test</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 